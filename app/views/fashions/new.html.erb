<h2 class="py-5 text-center">New Post</h2>
<%= form_with model: @fashion, local:true do |f| %>
  <div class="mt-3 text-center form-group">
    <label for="fashion_image">Image</label>
  </div>
  <div class="pb-3 text-center form-group">
    <%= f.attachment_field :image %>
  </div>
  <div class="mt-3 text-center form-group">
    <label for="fashion_opinion">Opinion</label>
  </div>
   <div class="pb-3 text-center form-group">
    <%= f.text_area :introduction %>
  </div>
  <div class="py-3 text-center form-group">
    <%= f.submit 'submit' %>
  </div>
<% end %>